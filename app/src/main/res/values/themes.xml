<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KManager" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_logo_icon</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/AlertDialog_KManager</item>
    </style>

    <style name="EditText_KManager">
        <item name="android:textColor">@color/black_logo_icon</item>
        <item name="android:backgroundTint">@color/orange_logo_icon</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edit_text</item>
    </style>

    <style name="Button_KManager">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textColor">@color/orange_logo_icon</item>
    </style>

    <style name="AlertDialog_KManager" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/orange_logo_icon</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/orange_logo_icon</item>
    </style>

</resources>